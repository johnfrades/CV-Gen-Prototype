<h1>Register</h1>

<form class="form-horizontal" action="/reg" method="POST">
  <div class="form-group">
    <label class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="number" name="regstudentid" class="form-control" placeholder="Student ID">
    </div>
  </div>
  <div class="form-group">
    <label  class="col-sm-2 control-label">Authentication Key</label>
    <div class="col-sm-10">
      <input type="text" name="regauthkey" class="form-control"  placeholder="Authentication Key">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Sign in</button>
    </div>
  </div>
</form>













<h1>Generate Authentication Key</h1>

<form class="form-horizontal" action="/authkeygen" method="POST">
  <div class="form-group">
    <label class="col-sm-2 control-label">Student ID</label>
    <div class="col-sm-10">
      <input type="number" name="genauthkey[studentid]" class="form-control" placeholder="Student ID">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Authentication Key</label>
    <div class="col-sm-10">
      <input type="text" name="genauthkey[authkey]" class="form-control"  placeholder="Authentication Key">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Generate</button>
    </div>
  </div>
</form>





